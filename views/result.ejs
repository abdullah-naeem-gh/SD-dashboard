<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated Images</title>
    <style>
       body {
            font-family: 'Poppins', Arial, sans-serif;
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
            background: linear-gradient(135deg, #1e1335, #261745);
            color: #ffffff;
        }

        h1 {
            color: #ffffff;
            text-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .image-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
            justify-items: center;
        }

        .image-wrapper {
            max-width: 100%;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            overflow: hidden;
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease;
            cursor: pointer;
        }

        .image-wrapper:hover {
            transform: scale(1.05);
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        }

        .button {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 25px;
            background-color: #6a5acd;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            transition: background-color 0.3s, transform 0.3s ease;
            font-size: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .button:hover {
            background-color: #483d8b;
            transform: translateY(-2px);
        }

        /* Overlay styles */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .overlay img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .overlay:target {
            display: flex;
        }

        /* Close button styles */
        .overlay .close {
            position: absolute;
            top: 20px;
            right: 30px;
            font-size: 2rem;
            color: white;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Generated Images</h1>
    <div class="image-container">
        <% imageUrls.forEach(function(imageUrl, index) { %>
            <div class="image-wrapper">
                <a href="#overlay<%= index %>">
                    <img src="<%= imageUrl %>" alt="Generated Image">
                </a>
            </div>

            <!-- Overlay for full screen view -->
            <div id="overlay<%= index %>" class="overlay">
                <a href="#" class="close">&times;</a>
                <img src="<%= imageUrl %>" alt="Generated Image">
            </div>
        <% }); %>
    </div>
    <a href="/" class="button">Generate More Images</a>
</body>
</html>
